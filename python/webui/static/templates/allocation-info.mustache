{{!
    Allocation Information Template
    Displays allocation details with stats boxes

    Data structure:
    {
        resource_name: "Derecho",
        start_date: "2024-01-01T00:00:00",
        end_date: "2024-12-31T23:59:59",
        status: "Active",
        allocated: 500000.0,
        used: 234567.89,
        remaining: 265432.11,
        percent_used: 46.91
    }
}}
<div class="row mb-3">
    <div class="col-md-3">
        <div class="mb-2">
            <strong>Resource:</strong> <span>{{resource_name}}</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mb-2">
            <strong>Start Date:</strong> <span>{{start_date_formatted}}</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mb-2">
            <strong>End Date:</strong> <span>{{end_date_formatted}}</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mb-2">
            <strong>Status:</strong>
            {{#statusIsActive}}
            <span class="badge badge-success">{{status}}</span>
            {{/statusIsActive}}
            {{^statusIsActive}}
            <span class="badge badge-secondary">{{status}}</span>
            {{/statusIsActive}}
        </div>
    </div>
</div>

<hr class="my-3">

<div class="row">
    <div class="col-md-3">
        <div class="text-center p-2 bg-light rounded">
            <small class="text-muted d-block mb-1">Allocated</small>
            <h5 class="mb-0 text-primary">{{allocated_formatted}}</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="text-center p-2 bg-light rounded">
            <small class="text-muted d-block mb-1">Used</small>
            <h5 class="mb-0 text-warning">{{used_formatted}}</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="text-center p-2 bg-light rounded">
            <small class="text-muted d-block mb-1">Remaining</small>
            <h5 class="mb-0 text-success">{{remaining_formatted}}</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="text-center p-2 bg-light rounded">
            <small class="text-muted d-block mb-1">Usage</small>
            <h5 class="mb-0 text-ncar-navy">{{percent_used_formatted}}%</h5>
        </div>
    </div>
</div>

<div class="mt-3">
    <label class="font-weight-bold">Usage Progress</label>
    {{>progress-bar}}
</div>
